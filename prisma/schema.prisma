// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Owner {
  id               Int                @id @default(autoincrement())
  owner_name       String             @db.VarChar(225)
  products_owners  ProductsOwners[]

  @@map("owners")
}

model Product {
  id            Int                @id @default(autoincrement()) @map("product_id")
  product_name  String             @db.VarChar(85)
  product_brand String             @db.VarChar(45)
  created_date  DateTime           @db.DateTime(0)
  products_owners ProductsOwners[]

  @@map("products")
}

model ProductsOwners {
  products_id Int
  owners_id   Int
  owner       Owner    @relation(fields: [owners_id], references: [id])
  product     Product  @relation(fields: [products_id], references: [id])

  @@id([products_id, owners_id])
  @@map("products_owners")
}
